<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/layout_temp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/edtRegister">
        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout_pickup"
            android:animateLayoutChanges="true"
            android:layout_height="match_parent"
            android:background="@color/colorNavigation"
            android:layout_weight="1">
            <ImageView
                android:layout_toRightOf="@id/temp1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_your_place"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICK-UP"
                android:textSize="18sp"
                android:id="@+id/temp1"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/rippleEffectColor"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_toRightOf="@id/temp2"
                android:layout_centerVertical="true"
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drop_off"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DROP-OFF"
                android:textSize="18sp"
                android:id="@+id/temp2"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:textColor="@color/colorActiveNavigation"/>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/arrow_shape"
                android:rotation="90"
                android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_temp"
        android:id="@+id/layout_name_direction"
        android:background="@color/colorNavigation"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:id="@+id/txt_name_location"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            android:id="@+id/img_navigation"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_name_direction"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_position"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_name_direction"
        android:layout_marginTop="5dp"
        android:id="@+id/ic_position"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorNavigation"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btn_phone"
                    android:background="@drawable/bg_chat">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_local_phone_white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_phone"
                    android:text="Call"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btn_chat"
                    android:background="@drawable/bg_chat">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/temp5"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_chat_white"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:visibility="gone"

                        android:layout_height="25dp"
                        android:id="@+id/img_notification_message"
                        android:layout_marginLeft="55dp"
                        android:src="@drawable/ic_notification_message"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_chat"
                    android:text="Chat"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/layout_cancel"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:id="@+id/btn_cancel"
                    android:background="@drawable/bg_chat">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_cancel_white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_cancel"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pick_up"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_pick_up"
            android:textSize="20sp"
            android:text="PICK-UP"
            />
    </RelativeLayout>
</RelativeLayout>
