<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbbf20"
    android:layout_weight="5"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3">
        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ripple_background"
            app:rb_color="#FFF"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_scale="6">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                android:id="@+id/centerImage"
                android:src="@drawable/ic_routes"/>
        </com.skyfishjy.library.RippleBackground>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finding you a nearby driver..."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_circle_gray"
            android:layout_below="@+id/lnl_panel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare:"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:id="@+id/txt_temp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VND 40k"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/txt_temp"
                android:id="@+id/txt_price"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_money"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/txt_temp2"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:id="@+id/txt_temp2"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorText"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_circle_white"
            android:id="@+id/lnl_panel"
            android:gravity="top"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/pin_maps" />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/icons_menu_vertical" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_pointer_map" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_your_position"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="13dp"
                    android:text="12/109 T12-kp3, Tăng Long"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/txt_your_destination"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Ngã tư thủ đức"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btn_cancel_find_driver"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_cancel_find_driver"
            android:text="CANCEL"
            />
    </RelativeLayout>

</LinearLayout>