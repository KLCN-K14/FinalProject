<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:background="@drawable/shadow_bottom_ver2"
        android:id="@+id/rlt_layout_transport_standard"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        >
        <ImageView
            android:id="@+id/img_type_standard"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_type_motobike_x"
            />
        <TextView
            android:id="@+id/txt_name_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport Standard"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/img_type_standard"/>

        <TextView
            android:id="@+id/txt_price_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/txt_time_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/txt_price_standard"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="bottom"
        android:background="@drawable/shadow_bottom"
        android:layout_gravity="bottom"
        android:id="@+id/rlt_layout_transport_premium"
        android:layout_below="@id/rlt_layout_transport_standard"
        android:foregroundGravity="bottom"
        >
        <ImageView
            android:id="@+id/img_type_premium"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_type_motobike_y"
            />
        <TextView
            android:id="@+id/txt_name_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport Premium"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_toRightOf="@id/img_type_premium"/>

        <TextView
            android:id="@+id/txt_price_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/txt_time_premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_below="@+id/txt_price_premium"
            android:textSize="12sp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_double_up_down"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_up_bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>