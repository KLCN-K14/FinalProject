<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_driver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:behavior_hideable="false"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bottom_sheet_driver"
        android:layout_height="190dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Transport Standard"
            android:id="@+id/txt_name_service"
            android:textColor="@color/colorGray2"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name_service"
            android:orientation="horizontal"
            android:id="@+id/temp"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="76-G1 214.00"
                android:id="@+id/txt_name_car"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_temp"
                app:srcCompat="@drawable/ic_lens_white_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Yamaha Sirius RC"
                android:id="@+id/txt_license_plate"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/temp"
            android:layout_margin="15dp"
            android:background="@drawable/bottom_sheet_driver_border"
            android:layout_height="110dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_acceptance"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/img_temp1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rating"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:id="@+id/img_temp2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancellation"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:id="@+id/img_temp3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:id="@+id/txt_percent_accecpt"
                android:textColor="@color/colorActiveNavigation"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/img_temp1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"
                android:id="@+id/txt_rating"
                android:textColor="@color/colorActiveNavigation"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/img_temp1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0%"
                android:id="@+id/txt_percent_cancellation"
                android:textColor="@color/colorActiveNavigation"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/img_temp1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acceptance"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/txt_percent_accecpt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_rating"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancellation"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_below="@id/txt_percent_cancellation"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>