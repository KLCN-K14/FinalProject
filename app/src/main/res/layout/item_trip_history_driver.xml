<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:layout_marginLeft="10dp"
            android:id="@+id/txt_status"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:background="@drawable/bg_completed"
            android:textStyle="bold"
            android:textColor="@color/colorActiveNavigation"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Mar 2017, 10:53PM"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/txt_time_trip"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/txt_time_trip"
            android:background="@drawable/border_top_gray_layout_white">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/temp"
                app:srcCompat="@drawable/ic_travel_driver"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pickup"
                android:textStyle="bold"
                android:layout_toRightOf="@id/temp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:text="Ngã tư thủ đức"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_destination"
                android:layout_toRightOf="@id/temp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:textSize="16sp"
                android:text="Ngã tư thủ đức"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND 70K"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:id="@+id/txt_price"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_money"
            app:srcCompat="@drawable/ic_money_item"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>