<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_email_sign_in"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/edtRegister"
            android:textColorHint="@color/edtRegister"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/edtRegister"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/edtRegister"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_pass_sign_in"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/edtRegister"
            android:textColorHint="@color/edtRegister"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/edtRegister"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/edtRegister"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_sign_in"
                android:textStyle="bold"
                android:textColor="@color/rippleEffectColor"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/txt_sign_in"
                android:id="@+id/txt_cancel"
                android:textColor="@color/rippleEffectColor"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>